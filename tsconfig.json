{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true, // стандартная настройка TypeScript Для его работы, компиляции
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "strict": true, // строгий режим
    "jsx": "react-jsx" // для нормальной работы реакта
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}